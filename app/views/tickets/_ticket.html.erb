<div id="ticket-<%= ticket.id %>">
    <span class="bold"><%= ticket.user.prenom %> <%= ticket.user.nom %></span>
    <i><%= ticket.created_at.strftime("%a %b %e à %lh%M %p") %></i>
    <p><i class='bx bx-message-dots'></i> <%= ticket.content %></p>
    <br/>
    <% if current_user.teacher? %>
        <%= link_to "Marquer comme terminé", ending_ticket_path(ticket), data: {turbo_method: :post}, class: "button button-primary bg-green" %>
    <% elsif current_user.student? %>
        <%= link_to "Annuler mon Ticket", cancel_ticket_path(ticket), data: {turbo_method: :post}, class: "button button-primary bg-red" %>
        <span>Position: <%= current_user.position %></span>
    <% end %>
</div>
<br/>
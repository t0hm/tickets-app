<%= render partial: "partials/menu" %>

<div class="container">
    <span class="bold"><%= current_user.prenom %> <%= current_user.nom %></span>
    <br/>
    <%= simple_form_for [@classroom, @ticket], html: {class: ""} do |f| %>
        <%= f.input :content, label: false, placeholder: "Message ##{@classroom.city}", wrapper_html: {class: ""} %>
        <%= f.submit "Envoyer", class: "button-primary" %>
    <% end %>

    <div class="tickets" 
        data-controller="classroom-subscription"
        data-classroom-subscription-classroom-id-value="<%= @classroom.id %>"
    >
        <div id="my-ticket" data-classroom-subscription-target="myTicket">
            <%= render "tickets/myticket", last_ticket: @last_ticket %>
        </div>
        <div id="hidden-tickets" style="display:none;" data-classroom-subscription-target="tickets">
            <% @tickets.each do |ticket| %>
                <%= render "tickets/ticket", ticket: ticket %>
            <% end %>        
        </div>
    </div>    

</div>

